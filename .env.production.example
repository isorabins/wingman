# Production Environment Configuration for WingmanMatch
# Copy to .env.production and update with actual values

# Environment
ENVIRONMENT=production
APP_VERSION=1.0.0
DEPLOYMENT_TIMESTAMP=2025-08-17T00:00:00Z
GIT_COMMIT=main

# Core API Keys (REQUIRED)
ANTHROPIC_API_KEY=sk-ant-your-production-key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Production Services (REQUIRED)
REDIS_URL=rediss://your-redis-url
RESEND_API_KEY=re_your-resend-key

# Monitoring and Observability (RECOMMENDED)
SENTRY_DSN=https://your-sentry-dsn
DATADOG_API_KEY=your-datadog-key
DATADOG_APP_KEY=your-datadog-app-key
UPTIME_ROBOT_API_KEY=your-uptime-robot-key
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook

# Performance Configuration
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_PERFORMANCE_ALERTS=true
ENABLE_CONNECTION_POOLING=true
DATABASE_POOL_SIZE=20
METRICS_RETENTION_HOURS=24

# Feature Flags
ENABLE_ENHANCED_MONITORING=true
ENABLE_EXTERNAL_ALERTS=true
ENABLE_BACKUP_VERIFICATION=true
ENABLE_RATE_LIMITING=true

# Security Configuration
ENABLE_SAFETY_FILTERS=true
ENABLE_CONTEXT_OPTIMIZATION=true
ENABLE_PROMPT_CACHING=true

# Deployment Configuration
ENABLE_CANARY_DEPLOYMENTS=false
ENABLE_BLUE_GREEN_DEPLOYMENT=false
PERFORMANCE_ALERT_EMAIL=admin@wingmanmatch.com

# Model Configuration for Production
CHAT_MODEL=claude-3-5-sonnet-20241022
BACKGROUND_MODEL=claude-3-haiku-20240307
ENABLE_COST_OPTIMIZATION=true
DEVELOPMENT_MODE=false

# WingmanMatch Features
ENABLE_MATCHING=true
ENABLE_AI_COACHING=true
ENABLE_CHALLENGE_SHARING=true
ENABLE_CHALLENGES_CATALOG=true
MAX_WINGMAN_MATCHES=5
CHALLENGE_DURATION_DAYS=30
SESSION_TIMEOUT_HOURS=24

# Coaching Configuration
COACH_PERSONA_VERSION=connell_v1
COACHING_STYLE_VARIANT=connell_barrett
ENABLE_NEW_COACH_PROMPTS=true

# Rate Limiting
ENABLE_RATE_LIMITING=true
REDIS_PASSWORD=your-redis-password

# Heroku Configuration (if using Heroku)
DATABASE_URL=postgresql://your-postgres-url
WEB_CONCURRENCY=4
