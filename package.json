{
  "name": "wingman-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:confidence": "vitest app/confidence-test/__tests__",
    "test:profile-setup": "vitest app/profile-setup/__tests__",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:profile-integration": "python tests/run_profile_setup_tests.py",
    "test:profile-quick": "python tests/run_profile_setup_tests.py --quick",
    "test:profile-security": "python tests/run_profile_setup_tests.py --security-only",
    "test:all": "npm run test:run && npm run test:e2e && npm run test:profile-integration",
    "perf:baseline": "lighthouse http://localhost:3000 --output=json --output-path=./performance/baseline.json",
    "perf:test": "npm run test:e2e -- tests/performance/",
    "perf:bundle": "npm run build:analyze && node -e \"require('./tools/bundle-analyzer.ts').generateBundleReport()\"",
    "perf:report": "node -e \"console.log(require('./lib/performance/monitor.ts').PerformanceMonitor.generateReport())\""
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^3.3.2",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/supabase-js": "^2.39.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "jsdom": "^23.0.1",
    "lighthouse": "^12.8.1",
    "msw": "^2.0.11",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "web-vitals": "^5.1.0",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
